extends layout 
 
block content 
  h1= title 
  - let items = results; 
  div(class="container-fluid") 
    div(class="row") 
      each item in items  
        div(class="row-sm-2", class="m-1") Item #{item.Brand}(#{item.color}) is #{item.price} 
        div(class="container-fluid")
         div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/butterflys/update?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Item #{item.butterfly_type}(#{item.size}) is #{item.cost} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
    
   
  