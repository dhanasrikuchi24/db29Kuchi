  div(class="container-fluid")
        div(class="row")
            -
                let butterfly  = [
                    {
                        "Brand": "Swallowtail Butterfly",
                        "price": 50,
                        "color": "orange"
                    },
                    {
                        "Brand": "Brush-footed Butterfly",
                        "price": 30,
